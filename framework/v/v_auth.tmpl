{%  if wrong_password %}
    <p><b>Неправильный логин или пароль.</b></p>
{% endif %}

<form method="post">
    <input name="action" type="hidden" value="enter">
    <label>
        Логин: <input name="login" type="text" required>
    </label>
    <br><br>
    <label>
        Пароль: <input name="password" type="password" required>
    </label>
    <br><br>
    <input type="submit" value="Войти"/>
</form>
